@model MFM.Models.ViewModels.OuterPartyCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<h4>OuterParty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="outerParty.Name" class="control-label"></label>
                <input asp-for="outerParty.Name" class="form-control" />
                <span asp-validation-for="outerParty.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="outerParty.Description" class="control-label"></label>
                <input asp-for="outerParty.Description" class="form-control" />
                <span asp-validation-for="outerParty.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=outerParty.Category class="control-label"></label>
                <select asp-for=outerParty.Category.Id class="form-control" aria-label="Select a category">
                    <option selected>Kindly select a category</option>
                    @foreach (Category Cat in @Model.Categories)
                    {
                        <option value=@Cat.Id> @Cat.Name </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

