@model MFM.Models.ViewModels.UserHomePageViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center ">
    <h1 class="display-4">Welcome @ViewData["CurrentUserFirstName"]</h1>
    <p>Start by selecting an option from the navigation bar up there</p>
    <p>Here is an overview of your statistcs... </p>
    <div class="row">
        <span class="alert alert-info">
            <strong>Balance</strong> @Model._balance
        </span>
        <span class="text-primary">Totals this month</span>
        <span class="alert alert-info">
            <strong>Total In</strong> @Model._totalin
        </span>
        <span class="alert alert-info">
            <strong>Total Out</strong> @Model._totalout
        </span>
        </>
    </div>
    <div class="row">
        @if (!(Boolean)Model._NotCurrentMonthMaxInFlag && !(Boolean)Model._NotCurrentMonthMaxOutFlag)
        {
            <span class="text-info">Max amounts from this month</span>
        }
        else
        {
            <span class="text-danger">Max amounts from last month</span>
        }
        @if (!(Boolean)Model._NotCurrentMonthMaxInFlag)
        {
            <span class="alert alert-success">
                <strong>Max In</strong> @Model._MaxIn
            </span>
        }
        else
        {
            <span class="alert alert-danger">
                <strong>Max In | last month</strong> @Model._MaxIn
            </span>
        }
        @if (!(Boolean)Model._NotCurrentMonthMaxOutFlag)
        {
            <span class="alert alert-success">
                <strong>Max Out</strong> @Model._MaxOut
            </span>
        }
        else
        {
            <span class="alert alert-danger">
                <strong>Max Out | last month</strong> @Model._MaxOut
            </span>
        }
    </div>
</div>
